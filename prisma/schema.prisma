generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updateddAt DateTime @default(now())
  email      String   @unique
  image      String?
  role       Role     @default(USER)
  bookmarks  Link[]
}

enum Role {
  ADMIN
  USER
}

model Link {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updateddAt  DateTime @default(now())
  title       String
  description String
  url         String
  category    String?
  imageUrl    String?
  userId      String
  User        User     @relation(fields: [userId], references: [id])
}
