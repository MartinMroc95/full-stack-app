{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "routes/*": ["src/routes/*"],
      "components/*": ["src/components/*"],
      "styles/*": ["src/styles/*"],
      "lib/*": ["lib/*"],
      "prisma/*": ["prisma/*"],
      "@pothos/plugin-prisma/generated": ["node_modules/@pothos/plugin-prisma/generated"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/graphql/cars.grahpql"],
  "exclude": ["node_modules"]
}
